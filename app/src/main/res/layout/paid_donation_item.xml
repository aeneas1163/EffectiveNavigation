<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp" >

        <TextView
            android:id="@+id/donation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Date Here"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/paid_charity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/donation_date"
            android:layout_marginLeft="4dp"
            android:gravity="center|left"
            android:text="Charity Goes Here"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/paid_donation_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/paid_charity_name"
            android:layout_alignBottom="@+id/donation_date"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center|right"
            android:layout_toLeftOf="@+id/donation_date"
            android:layout_toRightOf="@+id/paid_charity_name"
            android:text="50 â‚¬"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/paid_donation_db_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/paid_charity_name"
            android:layout_below="@+id/paid_charity_name"
            android:text="Donation DB ID"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

</FrameLayout>