<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="transparent_black">#CC000000</color>

    <color name="transparent">#00000000</color>

    <color name="android_blue">#33B5E5</color>

    <color name="android_yellow">#FFBB33</color>

    <color name="turquiose">#FF024854</color>
    <color name="navy">#FF071E3D</color>
    <color name="purple">#FF2F0130</color>
    <color name="green">#FF1E311D</color>
    <color name="orange">#FFF03C02</color>
    <color name="red">#FF600000</color>
    <color name="brown">#FF5E3929</color>
    <color name="grey">#FF1E1E1E</color>
    <color name="black">#FF000000</color>

    <color name="light_turquiose">#FF0293A6</color>
    <color name="light_navy">#FF76ACAE</color>
    <color name="light_purple">#FF6A00C4</color>
    <color name="light_green">#FF399C66</color>
    <color name="light_orange">#FFFF8800</color>
    <color name="light_red">#FFFC2F68</color>
    <color name="light_brown">#FFCD8C52</color>
    <color name="light_grey">#FF818181</color>
    <color name="light_black">#FF1E1E1E</color>

    <!-- the theme applied to the application or activity -->
    <style name="MainTheme"
        parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:actionBarTabStyle">@style/MainActionBarWithTabs</item>

        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppPreferencesTheme"
        parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabStyle">@style/AppPrefsActionBar</item>

        <item name="android:windowActionBarOverlay">false</item>

    </style>

    <style name="AlarmTheme"
        parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>



    <!-- ActionBar tabs styles -->
    <style name="MainActionBarWithTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView" >
        <!-- tab indicator -->
        <item name="android:tabStripEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:actionBarItemBackground">@null</item>
    </style>

    <style name="AppPrefsActionBar"
        parent="@android:style/Widget.Holo.ActionBar" >
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ToggleButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="ColorPreference">
        <attr name="itemLayout" format="reference" />
        <attr name="choices" format="reference" />
        <attr name="numColumns" format="integer" />
    </declare-styleable>

    <string-array name="default_color_choice_values" translatable="false">
        <item>@color/turquiose</item>
        <item>@color/navy</item>
        <item>@color/purple</item>
        <item>@color/green</item>
        <item>@color/orange</item>
        <item>@color/red</item>
        <item>@color/brown</item>
        <item>@color/grey</item>
        <item>@color/black</item>
    </string-array>

    <string-array name="default_color_choice_lighter_values" translatable="false">
        <item>@color/light_turquiose</item>
        <item>@color/light_navy</item>
        <item>@color/light_purple</item>
        <item>@color/light_green</item>
        <item>@color/light_orange</item>
        <item>@color/light_red</item>
        <item>@color/light_brown</item>
        <item>@color/light_grey</item>
        <item>@color/light_black</item>
    </string-array>

</resources>