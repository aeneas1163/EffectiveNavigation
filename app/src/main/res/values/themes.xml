<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="transparent_black">#CC000000</color>

    <color name="transparent">#00000000</color>

    <color name="android_blue">#33B5E5</color>

    <color name="android_yellow">#FFBB33</color>

    <color name="turquiose">#FF024854</color>
    <!-- the theme applied to the application or activity -->
    <style name="MainTheme"
        parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:actionBarTabStyle">@style/MainActionBarWithTabs</item>

        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppPreferencesTheme"
        parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabStyle">@style/AppPrefsActionBar</item>

        <item name="android:windowActionBarOverlay">false</item>

    </style>

    <style name="AlarmTheme"
        parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>



    <!-- ActionBar tabs styles -->
    <style name="MainActionBarWithTabs"
        parent="@android:style/Widget.Holo.ActionBar.TabView" >
        <!-- tab indicator -->
        <item name="android:tabStripEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:actionBarItemBackground">@null</item>
    </style>

    <style name="AppPrefsActionBar"
        parent="@android:style/Widget.Holo.ActionBar" >
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ToggleButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="ColorPreference">
        <attr name="itemLayout" format="reference" />
        <attr name="choices" format="reference" />
        <attr name="numColumns" format="integer" />
    </declare-styleable>

    <string-array name="default_color_choice_values" translatable="false">
        <item>#FF024854</item>
        <item>#FF071E3D</item>
        <item>#FF2F0130</item>
        <item>#FF1E311D</item>
        <item>#FFF03C02</item>
        <item>#FF600000</item>
        <item>#FF515779</item>
        <item>#FF1E1E1E</item>
        <item>#FF000000</item>
    </string-array>

    <string-array name="default_color_choice_lighter_values" translatable="false">
        <item>#FF0293A6</item>
        <item>#FF76ACAE</item>
        <item>#FF6A00C4</item>
        <item>#FF399C66</item>
        <item>#FFFF8800</item>
        <item>#FFFC2F68</item>
        <item>#FF7FCD9B</item>
        <item>#FF818181</item>
        <item>#FF000000</item>
    </string-array>

</resources>